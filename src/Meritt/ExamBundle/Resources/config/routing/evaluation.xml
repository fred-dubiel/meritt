<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="evaluation" path="/">
        <default key="_controller">MerittExamBundle:Evaluation:index</default>
    </route>

    <route id="evaluation_show" path="/{id}/show">
        <default key="_controller">MerittExamBundle:Evaluation:show</default>
    </route>

    <route id="evaluation_new" path="/new">
        <default key="_controller">MerittExamBundle:Evaluation:new</default>
    </route>

    <route id="evaluation_create" path="/create">
        <default key="_controller">MerittExamBundle:Evaluation:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="evaluation_edit" path="/{id}/edit">
        <default key="_controller">MerittExamBundle:Evaluation:edit</default>
    </route>

    <route id="evaluation_update" path="/{id}/update">
        <default key="_controller">MerittExamBundle:Evaluation:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="evaluation_delete" path="/{id}/delete">
        <default key="_controller">MerittExamBundle:Evaluation:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
