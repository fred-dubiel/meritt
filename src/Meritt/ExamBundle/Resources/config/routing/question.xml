<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="question" path="/">
        <default key="_controller">MerittExamBundle:Question:index</default>
    </route>

    <route id="question_show" path="/{id}/show">
        <default key="_controller">MerittExamBundle:Question:show</default>
    </route>

    <route id="question_new" path="/new">
        <default key="_controller">MerittExamBundle:Question:new</default>
    </route>

    <route id="question_create" path="/create">
        <default key="_controller">MerittExamBundle:Question:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="question_edit" path="/{id}/edit">
        <default key="_controller">MerittExamBundle:Question:edit</default>
    </route>

    <route id="question_update" path="/{id}/update">
        <default key="_controller">MerittExamBundle:Question:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="question_delete" path="/{id}/delete">
        <default key="_controller">MerittExamBundle:Question:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
