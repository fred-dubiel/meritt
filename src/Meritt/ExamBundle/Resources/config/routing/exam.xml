<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="exam" path="/">
        <default key="_controller">MerittExamBundle:Exam:index</default>
    </route>

    <route id="exam_show" path="/{id}/show">
        <default key="_controller">MerittExamBundle:Exam:show</default>
    </route>

    <route id="exam_new" path="/new">
        <default key="_controller">MerittExamBundle:Exam:new</default>
    </route>

    <route id="exam_create" path="/create">
        <default key="_controller">MerittExamBundle:Exam:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="exam_edit" path="/{id}/edit">
        <default key="_controller">MerittExamBundle:Exam:edit</default>
    </route>

    <route id="exam_update" path="/{id}/update">
        <default key="_controller">MerittExamBundle:Exam:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="exam_delete" path="/{id}/delete">
        <default key="_controller">MerittExamBundle:Exam:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
