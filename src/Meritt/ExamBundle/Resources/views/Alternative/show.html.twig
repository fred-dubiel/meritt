{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Alternative</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Alternativetext</th>
                <td>{{ entity.alternativeText }}</td>
            </tr>
            <tr>
                <th>Iscorrect</th>
                <td>{{ entity.isCorrect }}</td>
            </tr>
            <tr>
                <th>Alternativelabel</th>
                <td>{{ entity.alternativeLabel }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('alternative') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('alternative_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
